generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum DivisionEnum {
  A
  B
  C
  D
}

enum GradeEnum {
  FIRST
  SECOND
  THIRD
  FOURTH
  FIFTH
  SIXTH
}

enum ShiftEnum {
  MORNING
  AFTERNOON
}

model Grade {
  id          String       @id @default(cuid())
  grade       GradeEnum
  division    DivisionEnum
  shift       ShiftEnum
  students    Student[]
}

model Student {
  id          String           @id @default(cuid())
  name        String
  lastName    String
  attendance Attendance[]
  grade       Grade            @relation(fields: [gradeId], references: [id])
  gradeId     String
}

enum StatusEnum {
  ABSENT
  LATE
}

model Attendance {
  id        String   @id @default(cuid())
  date      DateTime @default(now())
  status    StatusEnum
  student   Student  @relation(fields: [studentId], references: [id])
  studentId String
}